{
  "name": "electron-scm-tool",
  "private": true,
  "version": "0.0.1",
  "author": "blink",
  "description": "供应量补丁增量工具，发版必备工具",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build-win": "vite build && electron-builder --win --x64",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.0",
    "electron": "^19.0.8",
    "electron-builder": "^23.6.0",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vite-plugin-optimizer": "^1.4.0",
    "vue": "^3.2.37",
    "vue-tsc": "^0.38.4"
  },
  "dependencies": {
    "dayjs": "^1.11.6",
    "electron-updater": "^5.3.0",
    "element-plus": "^2.2.19",
    "node-xlsx": "^0.21.0"
  },
  "build": {
    "directories": {
      "output": "release",
      "app": "dist"
    },
    "files": [
      "**"
    ],
    "extends": null,
    "productName": "供应链补丁工具",
    "appId": "com.inpur.scm",
    "asar": true,
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "供应链补丁工具",
      "installerIcon": "favicon.ico",
      "uninstallerIcon": "favicon.ico",
      "installerHeaderIcon": "favicon.ico"
    },
    "win": {
      "icon": "favicon.ico",
      "target": {
        "target": "portable",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost:5500/"
      }
    ]
  }
}
